{
  "name": "choreograph",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "description": "Asymmetric household labor simulation. Invisible work, visible stress, impossible balance.",
  "repository": {
    "type": "git",
    "url": "https://github.com/delorenj/choreograph.git"
  },
  "keywords": [
    "game",
    "simulation",
    "emotional-labor",
    "household-dynamics",
    "playcanvas",
    "typescript"
  ],
  "author": "Jarad DeLorenzo",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "playcanvas": "^2.4.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  }
}
